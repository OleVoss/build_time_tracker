<idea-plugin>
    <id>de.olevoss.BuildTimeTracker</id>
    <name>Build Time Tracker (BTT)</name>
    <vendor email="ole.voss@posteo.de"/>

    <description><![CDATA[
    IntelliJ Plugin to track your wasted time on building.
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="btt.HelloAction" text="btt" description="Hello Action">
            <add-to-group group-id="btt.HelloAction" anchor="last"/>
            <action class="de.olevoss.btt.HelloAction" id="btt.Actions.HelloAction" text="Say Hello"/>
        </group>

    </actions>
</idea-plugin>